{
  "name": "Plumber",
  "version": "0.0.12",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "/js/_base.js",
      "/js/background.js"
    ]
  },
  "icons": {
    "48": "img/icon_active.png",
    "128": "img/icon_active_128.png"
  },
  "browser_action": {
    "default_popup": "/html/browser_action.html",
    "default_title": "Plumber",
    "default_icon": "img/icon_active.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "<all_urls>"
  ]
}